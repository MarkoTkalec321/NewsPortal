{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mx-auto p-6 bg-white shadow-lg rounded-lg max-w-lg">
        <h1 class="text-3xl font-bold mb-6 text-gray-800 text-center">Edit Article</h1>

        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

        <div>
            {{ form_label(form.title, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.title, {'attr': {'class': 'mt-1 block w-full rounded-md border border-gray-300 focus:border-black focus:ring-black sm:text-sm p-3'}}) }}
            {{ form_errors(form.title, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
        </div>

        <div>
            {{ form_label(form.author, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.author, {'attr': {'class': 'mt-1 block w-full rounded-md border border-gray-300 focus:border-black focus:ring-black sm:text-sm p-3'}}) }}
            {{ form_errors(form.author, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
        </div>

        <div>
            {{ form_label(form.content, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.content, {'attr': {'class': 'mt-1 block w-full rounded-md border border-gray-300 focus:border-black focus:ring-black sm:text-sm p-3'}}) }}
            {{ form_errors(form.content, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
        </div>

        <div>
            {{ form_label(form.category, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.category, {'attr': {'class': 'mt-1 block w-full rounded-md border border-gray-300 focus:border-black focus:ring-black sm:text-sm p-3'}}) }}
            {{ form_errors(form.category, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
        </div>

        <div>
            {{ form_label(form.image, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.image, {'attr': {'class': 'mt-1 block w-full rounded-md border border-gray-300 focus:border-black focus:ring-black sm:text-sm p-3'}}) }}
            {{ form_errors(form.image, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
        </div>

        <div class="mt-6">
            <button type="submit" class="w-full inline-flex justify-center py-2 px-4 border border-black shadow-sm text-sm font-medium rounded-md text-white bg-black hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black">
                Save Article
            </button>
        </div>

        {{ form_end(form) }}

        <!-- Flash message area -->
        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mt-4 mb-4 text-center">
                {{ message }}
            </div>
        {% endfor %}
    </div>
{% endblock %}
