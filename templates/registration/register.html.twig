{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="w-4/5 sm:w-3/4 lg:w-1/2 xl:w-1/3 mx-auto mt-16 bg-white p-8 shadow-xl rounded-lg">
        <div class="text-center">
            <h1 class="text-4xl font-semibold text-gray-800 pb-8">Register</h1>
        </div>

        {{ form_start(registrationForm) }}

        <!-- Username Field -->
        <div class="mb-6">
            <label for="{{ registrationForm.username.vars.id }}" class="block text-lg font-medium text-gray-700">
                {{ form_label(registrationForm.username) }}
            </label>
            <div class="mt-1">
                {{ form_widget(registrationForm.username, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
            </div>
            {% for error in registrationForm.username.vars.errors %}
                <div class="text-red-500 text-sm mt-2">{{ error.message }}</div>
            {% endfor %}
        </div>

        <!-- Email Field -->
        <div class="mb-6">
            <label for="{{ registrationForm.email.vars.id }}" class="block text-lg font-medium text-gray-700">
                {{ form_label(registrationForm.email) }}
            </label>
            <div class="mt-1">
                {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
            </div>
            {% for error in registrationForm.email.vars.errors %}
                <div class="text-red-500 text-sm mt-2">{{ error.message }}</div>
            {% endfor %}
        </div>

        <!-- Password Field -->
        <div class="mb-6">
            <label for="{{ registrationForm.plainPassword.vars.id }}" class="block text-lg font-medium text-gray-700">
                {{ form_label(registrationForm.plainPassword) }}
            </label>
            <div class="mt-1">
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
            </div>
            {% for error in registrationForm.plainPassword.vars.errors %}
                <div class="text-red-500 text-sm mt-2">{{ error.message }}</div>
            {% endfor %}
        </div>

        <!-- Confirm Password Field -->
        <div class="mb-6">
            <label for="{{ registrationForm.passwordConfirm.vars.id }}" class="block text-lg font-medium text-gray-700">
                {{ form_label(registrationForm.passwordConfirm) }}
            </label>
            <div class="mt-1">
                {{ form_widget(registrationForm.passwordConfirm, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
            </div>
            {% for error in registrationForm.passwordConfirm.vars.errors %}
                <div class="text-red-500 text-sm mt-2">{{ error.message }}</div>
            {% endfor %}
        </div>

        <!-- Submit Button -->
        <div class="text-center">
            <button
                    type="submit"
                    class="w-full py-3 bg-blue-500 text-white text-lg font-semibold rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
                Register
            </button>
        </div>

        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
